<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="150.0" minWidth="200.0" prefHeight="180.0" prefWidth="350.0" stylesheets="@../Style/Style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aptech.eproject2_prosmiles.Controller.ForgotPasswordController">

    <Label layoutX="50.0" layoutY="14.0" styleClass="title" text="Enter your email to reset password" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="14.0" />

    <TextField fx:id="txt_email" layoutX="50.0" layoutY="47.0" promptText="Email address" styleClass="input-field" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="47.0" />

    <Button layoutX="50.0" layoutY="125.0" onAction="#handleSendEmail" text="Send" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="125.0">
        <styleClass>
            <String fx:value="title" />
            <String fx:value="master_button" />
            <String fx:value="input-field" />
        </styleClass>
    </Button>

    <Label fx:id="lbl_status" layoutX="50.0" layoutY="100.0" styleClass="status-label" text="" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0" />

</AnchorPane>
